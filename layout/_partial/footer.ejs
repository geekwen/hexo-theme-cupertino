<footer>
    <div class="inner">
        <div class="links">
            <% for (const i in theme.footer) { %>
            <div class="group">
                <h4 class="title"><%= i %></h4>
                <% for (const n in theme.footer[i]) { %>
                <a href="<%- theme.footer[i][n] %>" class="item"><%= n %></a>
                <% } %>
            </div>
            <% } %>
        </div>
        <span>
            Copyright&copy; <%= date(new Date(), 'YYYY') %> <a href="<%= config.url %>"><%= config.author || config.title %></a>
            ,&nbsp;
            <%- __('powered_by', '<a href="http://hexo.io/" target="_blank">Hexo</a>') %>
        </span>
        <% if (theme.footer_extra_description) { %>
        <span class="footer-extra-description"><%- theme.footer_extra_description %></span>
        <% } %>
